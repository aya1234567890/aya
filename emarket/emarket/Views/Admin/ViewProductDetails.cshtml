@model emarket.Models.Viewmodel
@{
    ViewBag.Title = "ViewProductDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ViewProductDetails</title>
    <link href="~/Content/paginition.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style>
        td {
            padding: 20px;
        }
    </style>
</head>
<body>

    <div class="row">
        <div class="col-lg-12 col-md-12">
            <img src="~/Content/img/14560020750060463280.png" class="img img-responsive" style="width:100%" />
        </div>
    </div>

    <div class="row">

        <div class="col-lg-2 col-md-2">
            <img src="~/Content/img/adlisting2.gif" class="img img-responsive" style=" height:500px;" />
        </div>



        <div class="col-lg-8 col-md-8">

            <div>
                <h1> @Model.name_p  __  @Model.price EGP (@Model.name_c)</h1>
            </div>
            
            <img src="@Url.Content(@Model.image)" style="width:500PX; height:450PX" />

            <div>

                <p>@Model.description</p>
            </div>
            <table>
                <tr>

                    <td>

                        @Html.ActionLink("Edit Product", "update", new { id = Model.id_p }, new { @class = "btn btn-success" }) |
                        @Html.ActionLink("Delete Product", "Delete", new { id = Model.id_p }, new { @class = "btn btn-danger" })



                    </td>
                </tr>

            </table>










        </div>
        <div class="col-lg-2 col-md-2">
            <img src="~/Content/img/150_sleep1_600.gif" class="img img-responsive" style=" height:500px;" />
        </div>
    </div>

</body>
</html>